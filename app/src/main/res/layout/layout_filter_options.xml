<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filter_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/filter_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/get_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:textColor="@color/colorLazyGreen"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:text="Name: "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:id="@+id/get_user_name_edit"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_toRightOf="@id/get_user_name_text"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/get_user_postcode_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:textColor="@color/colorLazyGreen"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:text="Postcode: "
            android:layout_below="@id/get_user_name_text"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:id="@+id/get_user_postcode_edit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_below="@id/get_user_name_text"
            android:layout_toRightOf="@id/get_user_postcode_text"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/filter_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/filter_top_layout">
    </View>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filter_selector"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:singleLine="false"
        android:layout_below="@+id/filter_top_divider"
        app:singleSelection="true"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/filter_select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Type"
            android:textSize="14sp"
            android:checked="true"
            android:clickable="false"
            android:backgroundTint="@color/select_chip_bg"
            android:textColor="@color/chip_text" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/filter_select_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Height"
            android:textSize="14sp"
            android:backgroundTint="@color/select_chip_bg"
            android:textColor="@color/chip_text"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/filter_select_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Width"
            android:textSize="14sp"
            android:backgroundTint="@color/select_chip_bg"
            android:textColor="@color/chip_text"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/filter_select_shade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Shade"
            android:textSize="14sp"
            android:backgroundTint="@color/select_chip_bg"
            android:textColor="@color/chip_text"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/filter_select_frost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Frost"
            android:textSize="14sp"
            android:backgroundTint="@color/select_chip_bg"
            android:textColor="@color/chip_text"/>

    </com.google.android.material.chip.ChipGroup>

    <View
        android:id="@+id/filter_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:layout_below="@id/filter_selector">
    </View>

</RelativeLayout>
