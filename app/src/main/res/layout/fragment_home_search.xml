<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    android:paddingBottom="56dp">

<RelativeLayout
    android:id="@+id/home_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/home_search_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:text="BROWSE FOR PLANTS"
        android:fontFamily="@font/american_typewriter_bold"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/home_search_layout_location"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/home_search_location_text"
        android:background="@drawable/ic_rounded_edit_text"
        android:backgroundTint="@color/colorHomeLight" >


        <EditText
            android:id="@+id/home_search_location_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/andale_mono"
            android:gravity="center"
            android:padding="@dimen/appbar_padding"
            android:hint="Type postcode here"
            android:textColorHint="#444444"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="#000000"
            android:textSize="18sp"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:maxLength="4"/>

        <ImageButton
            android:id="@+id/home_search_location_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/ic_location" />

        <ImageButton
            android:id="@+id/home_search_location_go"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/ic_green_circle"
            android:elevation="4dp"
            android:src="@drawable/ic_search_white" />

    </RelativeLayout>

    <View
        android:id="@+id/home_search_divider1"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_below="@id/home_search_layout_location">
    </View>

    <TextView
        android:id="@+id/home_search_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_search_divider1"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:text="SEARCH BY PLANT NAME"
        android:fontFamily="@font/american_typewriter_bold"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/home_search_layout_name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/home_search_name_text"
        android:background="@drawable/ic_rounded_edit_text"
        android:backgroundTint="@color/colorHomeLight" >


        <EditText
            android:id="@+id/home_search_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/andale_mono"
            android:gravity="center"
            android:padding="@dimen/appbar_padding"
            android:textColorHint="#444444"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="#000000"
            android:textSize="18sp"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:maxLength="100"/>

        <ImageButton
            android:id="@+id/home_search_name_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/ic_green_circle"
            android:elevation="4dp"
            android:src="@drawable/ic_search_white" />
    </RelativeLayout>

    <View
        android:id="@+id/home_search_divider2"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_below="@id/home_search_layout_name">
    </View>

    <Button
        android:id="@+id/home_search_button_design"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/home_search_divider2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Design Your Garden"
        android:elevation="4dp"
        android:src="@drawable/ic_search_white" />

    <Button
        android:id="@+id/home_search_button_animals"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/home_search_button_design"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Learn About Habitat Gardening"
        android:elevation="4dp"
        android:src="@drawable/ic_search_white" />

    <Button
        android:id="@+id/home_search_button_edible"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/home_search_button_animals"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Learn About Edible Plants"
        android:elevation="4dp"
        android:src="@drawable/ic_search_white" />

</RelativeLayout>
</ScrollView>
