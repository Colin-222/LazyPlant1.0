<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plant_details_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plant_details_title"
            style="@style/Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/plant_details_constraint_layout"
            app:layout_constraintLeft_toLeftOf="@id/plant_details_constraint_layout"
            app:layout_constraintRight_toRightOf="@id/plant_details_constraint_layout"
            app:layout_constraintEnd_toEndOf="@id/plant_details_constraint_layout"
            app:layout_constraintTop_toTopOf="@id/plant_details_constraint_layout"/>

        <TextView
            android:id="@+id/plant_details_subtitle"
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/plant_details_constraint_layout"
            app:layout_constraintLeft_toLeftOf="@id/plant_details_constraint_layout"
            app:layout_constraintRight_toRightOf="@id/plant_details_constraint_layout"
            app:layout_constraintEnd_toEndOf="@id/plant_details_constraint_layout"
            app:layout_constraintTop_toBottomOf="@id/plant_details_title"/>

        <ImageButton
            android:id="@+id/plant_details_button_back"
            android:background="@android:drawable/ic_menu_revert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/plant_details_message"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/plants_details_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent">
        </View>

        <ImageView
            android:id="@+id/plant_details_image_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plant_details_subtitle" />

        <ToggleButton
            android:id="@+id/plant_details_button_favourites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_button_favourite"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/plant_details_image_main"
            app:layout_constraintEnd_toEndOf="@+id/plant_details_image_main"
            app:layout_constraintTop_toBottomOf="@id/plant_details_image_main"
            />

        <RelativeLayout
            android:id="@+id/plant_details_icons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorHomeLight"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plant_details_image_main"
            app:layout_constraintRight_toLeftOf="@+id/plant_details_button_favourites">

            <ImageButton
                android:id="@+id/plant_details_button_add"
                android:src="@drawable/ic_add"
                android:background="#00000000"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1mm"
                android:scaleType="fitCenter"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>



        </RelativeLayout>

        <View
            android:id="@+id/plants_details_divider2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/dividingGrey"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/plant_details_icons_layout"
            android:layout_centerHorizontal="true">
        </View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/plant_text_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/plants_details_divider2">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linear_layout"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/plant_text_constraint_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout
                android:padding="7dp"
                android:id="@+id/linear_icon_1"
                android:layout_marginHorizontal="2dp"
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/linear_icon_image1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"/>
                <TextView
                    android:id="@+id/linear_icon_text1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    style="@style/BasicText"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>
            </LinearLayout>

            <LinearLayout
                android:padding="7dp"
                android:id="@+id/linear_icon_2"
                android:layout_marginHorizontal="2dp"
                android:layout_width="93dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/linear_icon_image2"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"/>
                <TextView
                    android:id="@+id/linear_icon_text2"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    style="@style/BasicText"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>
            </LinearLayout>

            <LinearLayout
                android:padding="7dp"
                android:id="@+id/linear_icon_3"
                android:layout_marginHorizontal="2dp"
                android:layout_width="93dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/linear_icon_image3"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"/>
                <TextView
                    android:id="@+id/linear_icon_text3"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    style="@style/BasicText"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>
            </LinearLayout>

            <LinearLayout
                android:padding="7dp"
                android:id="@+id/linear_icon_4"
                android:layout_marginHorizontal="2dp"
                android:layout_width="93dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:weightSum="1">
                <ImageView
                    android:id="@+id/linear_icon_image4"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"/>
                <TextView
                    android:id="@+id/linear_icon_text4"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    style="@style/BasicText"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>
            </LinearLayout>

        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/plant_details_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            app:layout_constraintTop_toBottomOf="@id/plant_text_constraint_layout"/>


        <ImageButton
            android:id="@+id/plant_details_button_shopping"
            android:background="@drawable/ic_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plant_details_recycler"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>