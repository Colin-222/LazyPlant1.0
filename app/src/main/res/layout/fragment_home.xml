<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_1"
    android:paddingBottom="56dp">
<RelativeLayout
    android:id="@+id/home_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    android:layout_marginTop="00dp">

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pandatech"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:id="@+id/home_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHomeLight"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/home_logo">

        <View
            android:id="@+id/home_top_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentTop="true">
        </View>

        <ImageView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_lazyplant_title"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-30dp"
            />

        <TextView
            android:id="@+id/home_intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:textColor="@color/colorLazyGreen"
            android:textSize="28sp"
            android:text="NO TIME FOR\nGARDENING?!?\n\nPLANT NATIVE"
            android:fontFamily="@font/american_typewriter_bold"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_below="@id/home_title"
            android:layout_marginTop="-30dp"/>

        <TextView
            android:id="@+id/home_intro_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:textColor="@color/colorLazyGreen"
            android:textSize="18sp"
            android:text="The NATIVE plant recommender app thatâ€™s designed for your low maintainence life"
            android:fontFamily="@font/american_typewriter_bold"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_below="@id/home_intro_text"
            android:layout_marginTop="0dp"/>
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_below="@id/home_intro_text2">
        </View>

    </RelativeLayout>

    <View
        android:id="@+id/home_divider"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_below="@id/home_light">
    </View>

    <TextView
        android:id="@+id/home_browse_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_divider"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:text="BROWSE FOR PLANTS"
        android:fontFamily="@font/american_typewriter_bold"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorHomeLight"
        android:background="@drawable/ic_rounded_edit_text"
        android:layout_below="@+id/home_browse_text"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/home_location_button"
            android:layout_width="47dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_location" />

        <TextView
            android:id="@+id/home_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:padding="@dimen/appbar_padding"
            android:text="Get Current Location"
            android:fontFamily="@font/andale_mono"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/home_browse_go"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:background="@drawable/ic_green_circle"
            android:src="@drawable/ic_search_white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</RelativeLayout>
</ScrollView>
