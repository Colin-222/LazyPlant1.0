<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_grey"
    android:paddingBottom="56dp">

<RelativeLayout
    android:id="@+id/home_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_marginTop="0dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/home_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/home_desc"
            style="@style/Title2"
            android:text="LazyPlant, the only native plant recommender you'll ever need."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_popular_text"
        style="@style/Title1"
        android:text="Trending Plants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/home_light"
        />

    <View
        android:id="@+id/home_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/home_recycler">
    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/home_popular_text"/>

    <View
        android:id="@+id/home_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/home_recycler">
    </View>

    <Button
        android:id="@+id/home_explore_go"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/home_recycler"
        android:textAlignment="center"
        style="@style/Title1"
        android:textSize="20sp"
        android:text="Explore Native Plants"
        android:elevation="4dp"
        android:background="#088527"/>

    <Button
        android:id="@+id/home_design_go"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_explore_go"
        android:layout_alignLeft="@id/home_explore_go"
        android:layout_alignStart="@id/home_explore_go"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        style="@style/Title1"
        android:textSize="16sp"
        android:text="Explore Garden Designs"
        android:elevation="4dp"
        android:background="#088527" />

    <Button
        android:id="@+id/home_shopping_go"
        style="@style/Title1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/home_explore_go"
        android:layout_alignRight="@id/home_explore_go"
        android:layout_alignEnd="@id/home_explore_go"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="Find Nearby Shops"
        android:elevation="4dp"
        android:background="#088527"  />


</RelativeLayout>
</ScrollView>
