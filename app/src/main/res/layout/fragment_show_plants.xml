<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="56dp">

    <RelativeLayout
        android:id="@+id/show_plants_postcode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/show_plants_postcode_edit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:hint="Postcode"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:maxLength="4"/>

        <Button
            android:id="@+id/show_plants_postcode_go"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/darkGreen"
            android:text="Search"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/show_plants_postcode_edit"/>

        <View
            android:id="@+id/filter_top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/show_plants_postcode_edit">
        </View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/show_plants_postcode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/show_plants_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text=""
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/show_plants_search_recycler"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp" />

    </RelativeLayout>
</RelativeLayout>



