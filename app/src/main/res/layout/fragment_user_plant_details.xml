<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/plant_details_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upd_title"
            style="@style/Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/upd_button_back"
            android:layout_toLeftOf="@+id/upd_delete"/>

        <ImageButton
            android:id="@+id/upd_button_back"
            android:background="@android:drawable/ic_menu_revert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/upd_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/ic_trash"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/upd_image_main"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_marginVertical="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/upd_title"/>

        <TextView
            android:id="@+id/upd_species"
            style="@style/BasicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/upd_image_main"
            />

        <TextView
            android:id="@+id/upd_plant_date"
            style="@style/BasicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/upd_species"
            />

        <TextView
            android:id="@+id/upd_last_watering"
            style="@style/BasicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/upd_plant_date"
            />

        <TextView
            android:id="@+id/upd_watering_interval_text"
            style="@style/BasicText"
            android:text="Watering Interval:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/upd_last_watering"
            />

        <!--<EditText
            android:id="@+id/upd_watering_interval_edit"
            style="@style/BasicText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_toRightOf="@+id/upd_watering_interval_text"
            android:layout_alignBottom="@+id/upd_watering_interval_text"
            android:maxLength="4"
            android:textAlignment="center"
            />-->

        <View
            android:id="@+id/udp_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/upd_watering_interval_text">
        </View>

        <RelativeLayout
            android:id="@+id/upd_notes_layout"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_below="@+id/udp_divider">

            <TextView
                android:id="@+id/upd_notes_title"
                android:text="Notes:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                style="@style/Title2"/>

            <ImageButton
                android:id="@+id/upd_notes_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:src="@drawable/ic_edit"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/upd_notes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_below="@id/upd_notes_title"
                style="@style/BasicText"/>

        </RelativeLayout>

        <View
            android:id="@+id/upd_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/upd_notes_layout">
        </View>

        <TextView
            android:id="@+id/upd_history_title"
            android:layout_marginHorizontal="10dp"
            android:text="Watering History:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            style="@style/Title2"
            android:layout_below="@id/upd_divider2"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upd_history_recycler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/upd_history_title"/>


    </RelativeLayout>
</ScrollView>