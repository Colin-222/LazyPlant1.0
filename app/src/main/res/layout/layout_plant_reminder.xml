<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reminder_layout"
    android:layout_margin="4dp"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:background="@color/bBlue"
    android:elevation="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reminder_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/reminder_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#D5D5D5"
        android:textSize="16sp"
        android:layout_below="@+id/reminder_name"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/reminder_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#D5D5D5"
        android:textSize="16sp"
        android:layout_below="@+id/reminder_species"
        android:layout_marginTop="2dp"/>

    <ImageButton
        android:id="@+id/reminder_water"
        android:layout_width="82dp"
        android:layout_height="96dp"
        android:elevation="4dp"
        android:background="@drawable/ic_border_white"
        android:src="@drawable/ic_watering_history_white"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_toLeftOf="@id/reminder_delete"/>

    <!--<ImageButton
        android:id="@+id/reminder_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:background="@drawable/ic_border"
        android:src="@drawable/ic_edit_white"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>-->

    <ImageButton
        android:id="@+id/reminder_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:background="@drawable/ic_border"
        android:src="@drawable/ic_trash_white"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <!--android:layout_below="@id/reminder_edit"-->


</RelativeLayout>
