<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <View android:layout_width="0dp" android:layout_height="0dp"
            android:layout_weight="0.02" />

        <ImageButton
            android:id="@+id/reminder_water"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:background="#00000000"
            android:src="@drawable/ic_watering_history"
            android:layout_marginVertical="2dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="0.10"/>

        <View android:layout_width="0dp" android:layout_height="0dp"
            android:layout_weight="0.02" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.88">

            <TextView
                android:id="@+id/reminder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="10dp"
                style="@style/Title2"/>

            <TextView
                android:id="@+id/reminder_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/reminder_name"
                android:layout_marginTop="0dp"
                android:paddingHorizontal="10dp"
                style="@style/SubtitleText"/>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/reminder_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/reminder_species"
                android:layout_toLeftOf="@id/reminder_progress_text"
                android:layout_marginVertical="4dp"
                android:paddingHorizontal="10dp"
                android:indeterminate="false"
                app:rcProgress="50"
                app:rcMax="100"
                app:rcBackgroundColor="#CCCCCC"
                app:rcProgressColor="@color/LazyGreen" />

            <TextView
                android:id="@+id/reminder_progress_text"
                android:text="Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reminder_species"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                style="@style/BasicText"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/reminder_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LazyGreenLight"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>





