<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/get_user_info_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/get_user_info_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:textColor="@color/colorLazyGreen"
        android:textSize="16sp"
        android:fontFamily="@font/american_typewriter_bold"
        android:text="SOMETHING "
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/get_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:textColor="@color/colorLazyGreen"
            android:textSize="16sp"
            android:fontFamily="@font/american_typewriter_bold"
            android:text="Name: "
            android:layout_marginTop="8dp"
            android:layout_below="@id/get_user_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:id="@+id/get_user_name_edit"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="20"
            android:fontFamily="@font/american_typewriter_bold"
            android:layout_below="@id/get_user_info_title"
            android:layout_toRightOf="@id/get_user_name_text"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/get_user_postcode_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:textColor="@color/colorLazyGreen"
            android:textSize="16sp"
            android:fontFamily="@font/american_typewriter_bold"
            android:text="Postcode: "
            android:layout_below="@id/get_user_name_text"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:id="@+id/get_user_postcode_edit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxLength="4"
            android:fontFamily="@font/american_typewriter_bold"
            android:layout_below="@id/get_user_name_text"
            android:layout_toRightOf="@id/get_user_postcode_text"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/get_user_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:fontFamily="@font/american_typewriter_bold"
        android:layout_below="@id/get_user_postcode_text"
        android:layout_toRightOf="@id/get_user_postcode_text"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"/>

</RelativeLayout>
