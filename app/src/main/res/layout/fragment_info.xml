<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info_name"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_botanical_name"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:text="Botanical Name"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/info_name"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/info_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/info_botanical_name"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/info_pic"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>