<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/name_search_scrolling_area"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/name_search_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_search_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="SEARCH BY PLANT NAME"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/name_search_go"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:background="@drawable/ic_green_circle"
        android:src="@drawable/ic_search_white"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintStart_toEndOf="@+id/name_search_edit"
        app:layout_constraintLeft_toRightOf="@+id/name_search_edit"
        app:layout_constraintTop_toTopOf="@id/name_search_edit"/>

    <EditText
        android:id="@+id/name_search_edit"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_rounded_edit_text"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/name_search_hint"
        app:layout_constraintLeft_toLeftOf="@id/name_search_hint"
        app:layout_constraintTop_toBottomOf="@id/name_search_hint" />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
